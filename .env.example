# Discord Message Listener Configuration
# =====================================

# Discord Configuration
DISCORD_TOKEN=your_discord_token_here
MONITORING_SERVER_ID=your_server_id_here
MONITORING_CHANNEL_IDS=
LOG_FILE=./logs/messages.json

# ======================
# NOTION INTEGRATION
# ======================

NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ======================
# HEARTBEAT MONITORING
# ======================

HEALTHCHECKS_PING_URL=https://hc-ping.com/your-unique-uuid-here
HEARTBEAT_INTERVAL=300
MONITOR_INTERVAL=120
BOT_PROCESS_NAME=simple_message_listener.py
AUTO_RESTART_BOT=true

# ======================
# GOOGLE DRIVE CONFIGURATION (OAuth 2.0 & Service Account)
# ======================

GOOGLE_DRIVE_ENABLED=true

# Option 1: OAuth 2.0 (Recommended - Desktop App)
# Requires credentials.json (App) and token.pickle (User)
GOOGLE_DRIVE_CREDENTIALS_FILE=credentials.json
GOOGLE_DRIVE_TOKEN_FILE=token.pickle

# Option 2: Service Account (Fallback)
GOOGLE_SERVICE_ACCOUNT_FILE=service_account.json

# Target Folder ID
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# ======================
# EMAIL NOTIFICATION CONFIGURATION
# ======================

# SMTP Server Configuration
# For Gmail: smtp.gmail.com (port 587)
# For Outlook/Hotmail: smtp-mail.outlook.com (port 587)
# For Yahoo: smtp.mail.yahoo.com (port 587)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Email Credentials
# For Gmail: Use App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_SENDER_EMAIL=your_email@gmail.com
SMTP_SENDER_PASSWORD=your_app_password_here

# Alert Recipients (comma-separated for multiple recipients)
ALERT_RECIPIENT_EMAILS=recipient1@example.com,recipient2@example.com

# ======================
# INACTIVITY MONITORING
# ======================

# Hours of inactivity before sending alert (default: 8.0)
INACTIVITY_THRESHOLD_HOURS=8.0

# Minutes between inactivity checks (default: 30.0)
INACTIVITY_CHECK_INTERVAL_MINUTES=30.0

# Activity tracker file location
ACTIVITY_TRACKER_FILE=./logs/bot_activity.json