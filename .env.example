# Discord Message Listener Configuration
# =====================================

# Discord Configuration
DISCORD_TOKEN=your_discord_token_here
MONITORING_SERVER_ID=your_server_id_here
MONITORING_CHANNEL_IDS=
LOG_FILE=./logs/messages.json

# ======================
# NOTION INTEGRATION
# ======================

NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ======================
# HEARTBEAT MONITORING
# ======================

HEALTHCHECKS_PING_URL=https://hc-ping.com/your-unique-uuid-here
HEARTBEAT_INTERVAL=300
MONITOR_INTERVAL=120
BOT_PROCESS_NAME=simple_message_listener.py
AUTO_RESTART_BOT=true

# ======================
# GOOGLE DRIVE CONFIGURATION (OAuth 2.0 & Service Account)
# ======================

GOOGLE_DRIVE_ENABLED=true

# Option 1: OAuth 2.0 (Recommended - Desktop App)
# Requires credentials.json (App) and token.pickle (User)
GOOGLE_DRIVE_CREDENTIALS_FILE=credentials.json
GOOGLE_DRIVE_TOKEN_FILE=token.pickle

# Option 2: Service Account (Fallback)
GOOGLE_SERVICE_ACCOUNT_FILE=service_account.json

# Target Folder ID
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here